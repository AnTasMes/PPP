@model LegoProdavnica.Models.Proizvod

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h1>Izmeni</h1>

    <h4>Proizvod</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-controller="Radnik" asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ProizvodId" />
                <div class="form-group">
                    <label asp-for="AlteranteId" class="control-label"></label>
                    <input asp-for="AlteranteId" class="form-control" required/>
                    <span asp-validation-for="AlteranteId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Naziv" class="control-label"></label>
                    <input asp-for="Naziv" class="form-control" required/>
                    <span asp-validation-for="Naziv" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Godine" class="control-label"></label>
                    <input asp-for="Godine" class="form-control" required/>
                    <span asp-validation-for="Godine" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Pakovanje" class="control-label"></label>
                    <select asp-for="Pakovanje" class="form-control form-select">
                        <option value="kutija">Kutija</option>
                        <option value="kesica">Kesica</option>
                    </select>
                    <span asp-validation-for="Pakovanje" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Tip" class="control-label"></label>
                    <input asp-for="Tip" class="form-control" required/>
                    <span asp-validation-for="Tip" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Cena" class="control-label"></label>
                    <input asp-for="Cena" class="form-control" required/>
                    <span asp-validation-for="Cena" class="text-danger"></span>
                </div>
                 <div class="form-group">
                    <label asp-for="NaStanju" class="control-label"></label>
                    <select asp-for="NaStanju" class="form-control form-select">
                        <option value="true">Da</option>
                        <option value="false">Ne</option>
                    </select>
                    <span asp-validation-for="NaStanju" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Slika" class="control-label"></label>
                    <input asp-for="Slika" class="form-control" required/>
                    <span asp-validation-for="Slika" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Sacuvaj" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <br />
        <a asp-action="List">Nazad na listu</a>
    </div>

</div>
