@model LegoProdavnica.Models.Profil

<div class="container">
  <div class="card">
        <div class="card-header d-flex justify-content-center">
            <h1 class="display-4" id="exampleModalLabel">Prijavljivanje</h1>
        </div>
        <div class="card-body">
            @using(Html.BeginForm("Login", "Profil", FormMethod.Post))
            {
              <div class="form-group">
                  <label class="col-sm col-form-label" for="lgnUname">Korisnicko ime:</label>
                  @Html.TextBoxFor(p => p.KorisnickoIme, new {@class="form-control"})
              </div>
              <div class="form-group">
                  <label class="col-sm-2 col-form-label" for="lgnPwd">Sifra:</label>
                  @Html.PasswordFor(p => p.Sifra, new {@class="form-control"})
              </div>
              <div class="modal-footer d-flex justify-content-center">
                <button type="submit" class="w-100 btn btn-success btn-block"><span class="glyphicon glyphicon-off"></span>Prijavite se</button>
              </div>
            }

        </div>
  </div>
</div>

