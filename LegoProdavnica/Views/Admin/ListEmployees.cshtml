@model IEnumerable<LegoProdavnica.Models.Profil>

@{
    ViewData["Title"] = "ListEmployees";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h1>ListEmployees</h1>

    <p>
        <a asp-action="Create">Napravi novi</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                        @Html.DisplayNameFor(model => model.Ime)
                </th>
                <th>
                        @Html.DisplayNameFor(model => model.Prezime)
                </th>
                <th>
                        @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                        @Html.DisplayNameFor(model => model.Sifra)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
                @foreach (var item in Model) {
                <tr>
                    <td>
                            @Html.DisplayFor(modelItem => item.Ime)
                    </td>
                    <td>
                            @Html.DisplayFor(modelItem => item.Prezime)
                    </td>
                    <td>
                            @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                            @Html.DisplayFor(modelItem => item.Sifra)
                    </td>
                    <td>
                            @*Ovo ispod srediti za manipulaciju profilima zaposlenih*@
                            @Html.ActionLink("Izmeni", "Edit", new { id=item.ProfilId }) |
                            @Html.ActionLink("Obrisi", "Delete", new { id=item.ProfilId })
                    </td>
                </tr>
                }
        </tbody>
    </table>

</div>