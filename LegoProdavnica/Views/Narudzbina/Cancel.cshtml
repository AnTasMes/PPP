@model LegoProdavnica.Models.Narudzbina

@{
    ViewData["Title"] = "Cancel";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h1>Obustavi</h1>

    <h3>Da li ste sigurni da zelite da obrisete ovo?</h3>
    <div>
        <h4>Narudzbina</h4>
        <hr />
        <dl class="row">
            <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.DatumKreacije)
            </dt>
            <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.DatumKreacije)
            </dd>
            <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.DatumDostave)
            </dt>
            <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.DatumDostave)
            </dd>
            <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Adresa)
            </dt>
            <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Adresa)
            </dd>
            <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Korisnik)
            </dt>
            <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Korisnik.KorisnickoIme)
            </dd>
            <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Proizvod)
            </dt>
            <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Proizvod.Naziv)
            </dd>
            <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Proizvod.Cena)
            </dt>
            <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Proizvod.Cena) RSD
            </dd>
        </dl>

        <form asp-action="Cancel">
            <input type="hidden" asp-for="NarudzbinaId" />
            <input type="submit" value="Obrisi" class="btn btn-danger" /> |
            <a asp-action="List">Nazad na listu</a>
        </form>
    </div>

</div>